</style>

<script type="text/javascript">
	
	function setErrorInfo(errorMsg){
		$('#errorString').html(errorMsg+"<br/>Please close the application.");
	}
	
	$(document).ready(function() {
		$('#logout').on('click', function() {
			$.mobile.changePage("#logoutPage");
		});
	}
</script>

